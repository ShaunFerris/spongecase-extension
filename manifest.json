{
  "manifest_version": 3,
  "name": "spOnGeCaSe Converter",
  "version": "1.0",
  "description": "Converts highlighted text to the case scheme from the mocking spongebob meme",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "commands",
    "scripting",
    "notifications"
  ],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "convert_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Convert and copy text to spongecase"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
